-- Load Orion Library
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/Base/main/HUBORION'))()

-- ANTI AFK
pcall(function()
    local VirtualUser = game:service'VirtualUser'
    game:service'Players'.LocalPlayer.Idled:connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end)

-- GLOBALS
local LP = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local character = LP.Character or LP.CharacterAdded:Wait()

_G.AutoDP = false
_G.AutoStamina = false
_G.AutoStamina2 = false
_G.AutoStamina3 = false
_G.AutoStamina4 = false
_G.AutoStamina5 = false
_G.AutoDumbell = false
_G.FarmClones = false
_G.TurboAnims = false

-- TURBO ANIMAÇÕES
spawn(function()
    while true do
        if _G.TurboAnims then
            local humanoid = character:FindFirstChild("Humanoid")
            if humanoid then
                for _, anim in humanoid:GetPlayingAnimationTracks() do
                    anim:AdjustSpeed(99999)
                end
            end
        end
        task.wait(0.00001)
    end
end)

-- Auto PushUp
function AutoPushUp()
    local lutero = ReplicatedStorage:FindFirstChild("Lutero")
    if not lutero then return end
    local args = {"GiveHealthCuzPro", 2, 1}
    local function executePushUp()
        while _G.AutoDP do
            for i = 1, 1 do
                lutero:FireServer(unpack(args))
                task.wait(0.000049)
            end
        end
    end
    for i = 1, 3 do task.spawn(executePushUp) end
end

-- Auto Stamina (1-5)
local function AutoStaminaGeneric(flag, loopCount, delay)
    local staminaEvent = ReplicatedStorage:FindFirstChild("AddStaminaEvent")
    if not staminaEvent then return end
    local function execute()
        while _G[flag] do
            for _ = 1, loopCount do
                for _ = 1, 8 do staminaEvent:FireServer() end
                task.wait(delay)
            end
        end
    end
    for _ = 1, math.ceil(loopCount * 1.2) do task.spawn(execute) end
end

function AutoStamina() AutoStaminaGeneric("AutoStamina", 18, 0.00003) end
function AutoStamina2() AutoStaminaGeneric("AutoStamina2", 12, 0.000049) end
function AutoStamina3() AutoStaminaGeneric("AutoStamina3", 12, 0.000049) end
function AutoStamina4() AutoStaminaGeneric("AutoStamina4", 25, 0.00003) end
function AutoStamina5() AutoStaminaGeneric("AutoStamina5", 67, 0.0001) end

-- Auto Dumbell
function AutoDumbell()
    local function execute()
        while _G.AutoDumbell do
            local dumbell = LP.Character and LP.Character:FindFirstChild("Dumbell")
            if dumbell then
                local event = dumbell:FindFirstChildWhichIsA("RemoteEvent")
                if event then event:FireServer() end
            end
            task.wait(0.000049)
        end
    end
    for _ = 1, 3 do task.spawn(execute) end
end

-- Clone Tool
function CloneTool()
    local tool = LP.Character:FindFirstChildOfClass("Tool") or LP.Backpack:FindFirstChildOfClass("Tool")
    if not tool then return end
    local clone = tool:Clone()
    for _, obj in ipairs(tool:GetDescendants()) do
        local new = obj:Clone()
        new.Parent = clone:FindFirstChild(obj.Parent.Name) or clone
    end
    clone.Parent = LP.Backpack
end

-- Equip All Tools
function EquipAllTools()
    for _, tool in pairs(LP.Backpack:GetChildren()) do
        if tool:IsA("Tool") then tool.Parent = LP.Character end
    end
end

-- Farm All Equipped Tools
function FarmAllTools()
    local function execute()
        while _G.FarmClones do
            for _, tool in pairs(LP.Character:GetChildren()) do
                if tool:IsA("Tool") then
                    local event = tool:FindFirstChildWhichIsA("RemoteEvent")
                    if event then event:FireServer() end
                end
            end
            task.wait(0.00005)
        end
    end
    for _ = 1, 4 do task.spawn(execute) end
end

-- Interface
local Window = OrionLib:MakeWindow({
    Name = "BILLS_OFC HUB",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionTest",
    IntroEnabled = false
})

local HubTab = Window:MakeTab({
    Name = "Menu Exclusivo",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

HubTab:AddSection({ Name = "Auto-Farm" })
HubTab:AddToggle({ Name = "Auto PushUp", Default = false, Callback = function(v) _G.AutoDP = v if v then AutoPushUp() end end })
HubTab:AddToggle({ Name = "Auto Stamina", Default = false, Callback = function(v) _G.AutoStamina = v if v then AutoStamina() end end })
HubTab:AddToggle({ Name = "Auto Stamina2", Default = false, Callback = function(v) _G.AutoStamina2 = v if v then AutoStamina2() end end })
HubTab:AddToggle({ Name = "Auto Dumbell", Default = false, Callback = function(v) _G.AutoDumbell = v if v then AutoDumbell() end end })
HubTab:AddToggle({ Name = "Turbo Animações", Default = false, Callback = function(v) _G.TurboAnims = v end })
HubTab:AddButton({ Name = "Clonar Tool Equipada", Callback = CloneTool })
HubTab:AddButton({ Name = "Equipar Todas Tools", Callback = EquipAllTools })
HubTab:AddToggle({ Name = "Farmar Todas Tools Equipadas", Default = false, Callback = function(v) _G.FarmClones = v if v then FarmAllTools() end end })

local StaminasTab = Window:MakeTab({
    Name = "Staminas+",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

StaminasTab:AddToggle({ Name = "Auto Stamina1", Default = false, Callback = function(v) _G.AutoStamina3 = v if v then AutoStamina3() end end })
StaminasTab:AddToggle({ Name = "Auto Stamina2", Default = false, Callback = function(v) _G.AutoStamina4 = v if v then AutoStamina4() end end })
StaminasTab:AddToggle({ Name = "Auto Stamina3", Default = false, Callback = function(v) _G.AutoStamina5 = v if v then AutoStamina5() end end })

local ExtrasTab = Window:MakeTab({
    Name = "FUNÇÕES A+",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

ExtrasTab:AddSection({ Name = "FUNÇÕES ADICIONAIS" })
ExtrasTab:AddButton({ Name = "InfiniteYield", Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/EdgeIYinfiniteyield/main/mastersource'))() end })
ExtrasTab:AddButton({ Name = "OPSTAMINA-Farme ⚙️", Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/STAMINA2/refs/heads/main/LUTERO'))() end })
ExtrasTab:AddButton({ Name = "STAMINA INSTANTANEA ⚙️", Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com/hakaiofc/STAMINA3/refs/heads/main/LUTERO'))() end })
